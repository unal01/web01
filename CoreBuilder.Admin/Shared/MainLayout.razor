@inherits LayoutComponentBase

<PageTitle>CoreBuilder Admin</PageTitle>

<div class="admin-wrapper">
    <aside class="admin-sidebar">
        <NavMenu />
    </aside>

    <div class="admin-main">
        <header class="admin-header">
            <div class="header-left">
                <button class="sidebar-toggle" onclick="document.querySelector('.admin-sidebar').classList.toggle('collapsed')">
                    <i class="bi bi-list"></i>
                </button>
                <h1 class="header-title">CoreBuilder</h1>
            </div>
            <div class="header-right">
                <div class="header-search">
                    <i class="bi bi-search"></i>
                    <input type="text" placeholder="Ara..." />
                </div>
                <div class="header-actions">
                    <button class="header-btn" title="Bildirimler">
                        <i class="bi bi-bell"></i>
                        <span class="badge">3</span>
                    </button>
                    <div class="header-user">
                        <img src="https://ui-avatars.com/api/?name=Admin&background=667eea&color=fff" alt="Admin" />
                        <span>Admin</span>
                    </div>
                </div>
            </div>
        </header>

        <main class="admin-content">
            @Body
        </main>

        <footer class="admin-footer">
            <div class="footer-left">
                <span>2025 CoreBuilder. Tum haklari saklidir.</span>
            </div>
            <div class="footer-right">
                <a href="#">Dokumantasyon</a>
                <a href="#">Destek</a>
                <a href="#">v1.0.0</a>
            </div>
        </footer>
    </div>
</div>
