@page "/"
@using CoreBuilder.Services
@inject SiteService SiteService
@inject ThemeService ThemeService
@inject NavigationManager NavManager

<div class="container-fluid">
    <div class="mb-4">
        <h3 class="fw-bold text-dark">Genel Bakış</h3>
        <p class="text-muted">CoreBuilder sisteminizin anlık durum raporu.</p>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 clickable-card" @onclick='() => NavManager.NavigateTo("sites")'>
                <div class="card-body d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                        <span class="oi oi-globe text-primary fs-4"></span>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">TOPLAM SİTE</h6>
                        <h2 class="mb-0 fw-bold">@siteCount</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100 clickable-card" @onclick='() => NavManager.NavigateTo("themes")'>
                <div class="card-body d-flex align-items-center">
                    <div class="bg-success bg-opacity-10 p-3 rounded-circle me-3">
                        <span class="oi oi-brush text-success fs-4"></span>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">AKTİF TEMALAR</h6>
                        <h2 class="mb-0 fw-bold">@themeCount</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-warning bg-opacity-10 p-3 rounded-circle me-3">
                        <span class="oi oi-pulse text-warning fs-4"></span>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">SİSTEM</h6>
                        <h5 class="mb-0 fw-bold text-success">Çalışıyor ⚡</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white fw-bold py-3">Hızlı İşlemler</div>
        <div class="card-body">
            <button class="btn btn-outline-primary me-2" @onclick='() => NavManager.NavigateTo("sites")'>
                Site Yönetimine Git
            </button>
            <button class="btn btn-outline-secondary" @onclick='() => NavManager.NavigateTo("themes")'>
                Tema Ayarları
            </button>
        </div>
    </div>
</div>

<style>
    .clickable-card {
        cursor: pointer;
        transition: transform 0.2s;
    }
    .clickable-card:hover {
        transform: translateY(-5px);
    }
</style>

@code {
    private int siteCount = 0;
    private int themeCount = 0;

    protected override void OnInitialized()
    {
        siteCount = SiteService.GetAllSites().Count;
        themeCount = ThemeService.GetAllThemes().Count;
    }
}
