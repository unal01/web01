@page "/sites"
@using CoreBuilder.Models
@using CoreBuilder.Services
@using CoreBuilder.Data
@using Microsoft.JSInterop
@using Microsoft.AspNetCore.Components.Forms
@inject SiteService SiteService
@inject NavigationManager Navigation
@inject AppDbContext Context
@inject IJSRuntime JSRuntime

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-dark mb-0"><i class="bi bi-globe me-2"></i>Site Yonetimi</h3>
        <button class="btn btn-primary shadow-sm" @onclick="CreateNewSite">
            <i class="bi bi-plus-lg me-2"></i>Yeni Site Olustur
        </button>
    </div>

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show">
            @successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <span class="fw-bold text-secondary">Mevcut Siteler (@sites.Count)</span>
        </div>
        <div class="card-body p-0">
            @if (sites.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">Site</th>
                                <th>Domain</th>
                                <th>Kategori</th>
                                <th>Header Rengi</th>
                                <th>Sayfa</th>
                                <th class="text-end pe-4">Islemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var site in sites)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center gap-3">
                                            @if (!string.IsNullOrEmpty(site.LogoUrl))
                                            {
                                                <img src="@site.LogoUrl" alt="@site.Name" style="width: 40px; height: 40px; object-fit: contain; border-radius: 6px; background: #f8f9fa; padding: 4px;" />
                                            }
                                            else
                                            {
                                                <div style="width: 40px; height: 40px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 6px; display: flex; align-items: center; justify-content: center;">
                                                    <i class="bi bi-building text-white"></i>
                                                </div>
                                            }
                                            <strong>@site.Name</strong>
                                        </div>
                                    </td>
                                    <td><span class="badge bg-light text-dark border">@site.Domain</span></td>
                                    <td>@site.Category</td>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            <div style="width:24px;height:24px;border-radius:4px;border:1px solid #ddd;background-color:@site.HeaderColor"></div>
                                            <small class="text-muted">@site.HeaderColor</small>
                                        </div>
                                    </td>
                                    <td><span class="badge bg-info">@GetPageCount(site.Id)</span></td>
                                    <td class="text-end pe-4">
                                        <button class="btn btn-sm btn-outline-secondary me-1" @onclick="() => EditSite(site)" title="Duzenle">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <a href="/pages/@site.Id" class="btn btn-sm btn-outline-primary me-1" title="Sayfalar">
                                            <i class="bi bi-file-earmark-text"></i>
                                        </a>
                                        <a href="/public/@site.Id/anasayfa" class="btn btn-sm btn-outline-success me-1" target="_blank" title="Onizle">
                                            <i class="bi bi-box-arrow-up-right"></i>
                                        </a>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteSite(site.Id)" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-5 text-center text-muted">
                    <i class="bi bi-globe" style="font-size: 3rem;"></i>
                    <p class="mt-3">Henuz site olusturulmamis.</p>
                    <button class="btn btn-primary mt-3" @onclick="CreateNewSite">
                        <i class="bi bi-plus-lg me-2"></i>Ilk Sitenizi Olusturun
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@if (showEditModal)
{
    <div class="modal d-block" style="background:rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title"><i class="bi bi-pencil me-2"></i>Site Duzenle</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseEditModal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Site Adi *</label>
                                <input type="text" class="form-control" @bind="editName" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Domain *</label>
                                <input type="text" class="form-control" @bind="editDomain" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Kategori</label>
                                <select class="form-select" @bind="editCategory">
                                    <option value="Education">Egitim</option>
                                    <option value="ExamPrep">Sinav Hazirlik</option>
                                    <option value="Government">Kamu</option>
                                    <option value="Marketing">Pazarlama</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Tasarım Ayarları</label>
                                <div class="row g-2">
                                    <div class="col-6">
                                        <label class="form-label small">Menü Tipi</label>
                                        <div>
                                            <InputRadioGroup @bind-Value="editMenuLayout">
                                                <div class="form-check form-check-inline">
                                                    <InputRadio class="form-check-input" id="menuHor" Value='@("Horizontal")' />
                                                    <label class="form-check-label small" for="menuHor">Yatay</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <InputRadio class="form-check-input" id="menuVer" Value='@("Vertical")' />
                                                    <label class="form-check-label small" for="menuVer">Dikey</label>
                                                </div>
                                            </InputRadioGroup>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <label class="form-label small">Yazı Tipi</label>
                                        <select class="form-select" @bind="editFontFamily">
                                            <option value="Inter, sans-serif">Inter</option>
                                            <option value="Arial, sans-serif">Arial</option>
                                            <option value="Roboto, sans-serif">Roboto</option>
                                            <option value="Georgia, serif">Georgia</option>
                                            <option value="Tahoma, sans-serif">Tahoma</option>
                                        </select>
                                    </div>

                                    <div class="col-6 mt-2">
                                        <label class="form-label small">Ana Renk</label>
                                        <div class="d-flex gap-2">
                                            <input type="color" class="form-control form-control-color" @bind="editPrimaryColor" style="width:60px;height:38px;" />
                                            <input type="text" class="form-control" @bind="editPrimaryColor" placeholder="#0d6efd" />
                                        </div>
                                    </div>

                                    <div class="col-6 mt-2">
                                        <label class="form-label small">İkincil Renk</label>
                                        <div class="d-flex gap-2">
                                            <input type="color" class="form-control form-control-color" @bind="editSecondaryColor" style="width:60px;height:38px;" />
                                            <input type="text" class="form-control" @bind="editSecondaryColor" placeholder="#6c757d" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Header Arka Plan Rengi</label>
                                <div class="d-flex gap-2">
                                    <input type="color" class="form-control form-control-color" @bind="editHeaderColor" style="width:60px;height:38px;" />
                                    <input type="text" class="form-control" @bind="editHeaderColor" placeholder="#ffffff" />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Header Yazi Rengi</label>
                                <div class="d-flex gap-2">
                                    <input type="color" class="form-control form-control-color" @bind="editHeaderTextColor" style="width:60px;height:38px;" />
                                    <input type="text" class="form-control" @bind="editHeaderTextColor" placeholder="#333333" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Header Onizleme</label>
                                <div class="border rounded p-3" style="background-color:@editHeaderColor;">
                                    @if (!string.IsNullOrEmpty(editLogoUrl))
                                    {
                                        <img src="@editLogoUrl" style="height:30px;margin-right:15px;" />
                                    }
                                    <span style="color:@editHeaderTextColor;font-weight:bold;">@(string.IsNullOrEmpty(editName) ? "Site Adi" : editName)</span>
                                    <span style="color:@editHeaderTextColor;margin-left:20px;opacity:0.8;">Ana Sayfa</span>
                                    <span style="color:@editHeaderTextColor;margin-left:10px;opacity:0.8;">Hakkimizda</span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Logo</label>
                                @if (!string.IsNullOrEmpty(editLogoUrl))
                                {
                                    <div class="text-center mb-2">
                                        <img src="@editLogoUrl" style="max-height:60px;" />
                                        <br /><button class="btn btn-sm btn-outline-danger mt-1" @onclick="() => editLogoUrl = null">Kaldir</button>
                                    </div>
                                }
                                else
                                {
                                    <InputFile OnChange="OnLogoSelected" accept="image/*" class="form-control" />
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseEditModal">Iptal</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveSite" disabled="@(string.IsNullOrEmpty(editName) || string.IsNullOrEmpty(editDomain))">
                        <i class="bi bi-check-lg me-1"></i>Kaydet
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Tenant> sites = new();
    private string successMessage = "";
    
    // Edit Modal
    private bool showEditModal;
    private Guid editSiteId;
    private string editName = "", editDomain = "", editCategory = "Education";
    private string editMenuLayout = "Horizontal";
    private string editPrimaryColor = "#0d6efd";
    private string editSecondaryColor = "#6c757d";
    private string editFontFamily = "Inter, sans-serif";
    private string editHeaderColor = "#ffffff", editHeaderTextColor = "#333333";
    private string? editLogoUrl;
    private long maxFileSize = 2 * 1024 * 1024;

    protected override void OnInitialized()
    {
        LoadData();
    }

    private void LoadData()
    {
        sites = SiteService.GetAllSites();
    }

    private void CreateNewSite()
    {
        Navigation.NavigateTo("/sites/create");
    }

    private int GetPageCount(Guid tenantId)
    {
        return Context.Pages.Count(p => p.TenantId == tenantId);
    }

    private void EditSite(Tenant site)
    {
        editSiteId = site.Id;
        editName = site.Name;
        editDomain = site.Domain;
        editCategory = site.Category;
        editMenuLayout = site.MenuLayout ?? "Horizontal";
        editPrimaryColor = site.PrimaryColor ?? "#0d6efd";
        editSecondaryColor = site.SecondaryColor ?? "#6c757d";
        editFontFamily = site.FontFamily ?? "Inter, sans-serif";
        editHeaderColor = site.HeaderColor ?? "#ffffff";
        editHeaderTextColor = site.HeaderTextColor ?? "#333333";
        editLogoUrl = site.LogoUrl;
        showEditModal = true;
    }

    private void CloseEditModal()
    {
        showEditModal = false;
    }

    private async Task OnLogoSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file.Size > maxFileSize) return;
        using var stream = file.OpenReadStream(maxFileSize);
        using var ms = new MemoryStream();
        await stream.CopyToAsync(ms);
        editLogoUrl = $"data:{file.ContentType};base64,{Convert.ToBase64String(ms.ToArray())}";
    }

    private async Task SaveSite()
    {
        var site = await Context.Tenants.FindAsync(editSiteId);
        if (site != null)
        {
            site.Name = editName;
            site.Domain = editDomain;
            site.Category = editCategory;
            site.MenuLayout = editMenuLayout;
            site.PrimaryColor = editPrimaryColor;
            site.SecondaryColor = editSecondaryColor;
            site.FontFamily = editFontFamily;
            site.HeaderColor = editHeaderColor;
            site.HeaderTextColor = editHeaderTextColor;
            site.LogoUrl = editLogoUrl;
            
            Context.Tenants.Update(site);
            await Context.SaveChangesAsync();
            
            successMessage = "Site guncellendi!";
            LoadData();
            CloseEditModal();
        }
    }

    private async Task DeleteSite(Guid id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Bu siteyi silmek istediginizden emin misiniz?"))
        {
            await SiteService.DeleteSiteAsync(id);
            successMessage = "Site silindi!";
            LoadData();
        }
    }
}