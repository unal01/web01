@page "/pages"
@using CoreBuilder.Models
@using CoreBuilder.Data
@inject AppDbContext Context
@inject NavigationManager Navigation

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-dark mb-0" style="font-size: 1.75rem;">Sayfa İçeriği Yönetimi</h3>
        @if (SelectedTenantId != Guid.Empty)
        {
            <button class="btn btn-primary shadow-sm" @onclick="OpenAddModal">
                <span class="oi oi-plus me-2"></span>Yeni Sayfa Ekle
            </button>
        }
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-4">
            <label class="form-label fw-bold mb-2" style="font-size: 0.95rem;">İşlem Yapılacak Siteyi Seçin:</label>
            <select class="form-select" @bind="SelectedTenantId" @bind:event="onchange" style="font-size: 0.95rem;">
                <option value="@Guid.Empty">-- Bir Site Seçiniz --</option>
                @foreach (var tenant in Tenants)
                {
                    <option value="@tenant.Id">@tenant.Name (@tenant.Domain)</option>
                }
            </select>
        </div>
    </div>

    @if (SelectedTenantId != Guid.Empty)
    {
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <span class="fw-bold text-secondary" style="font-size: 1rem;">Sitedeki Mevcut Sayfalar</span>
            </div>
            <div class="card-body p-0">
                @if (SitePages.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4" style="font-size: 0.9rem; font-weight: 600;">Sayfa Başlığı</th>
                                    <th style="font-size: 0.9rem; font-weight: 600;">URL Yolu (Slug)</th>
                                    <th style="font-size: 0.9rem; font-weight: 600;">Durum</th>
                                    <th class="text-end pe-4" style="font-size: 0.9rem; font-weight: 600;">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in SitePages)
                                {
                                    <tr>
                                        <td class="ps-4" style="font-size: 0.95rem;">
                                            <span class="fw-bold">@p.Title</span>
                                        </td>
                                        <td style="font-size: 0.9rem;">
                                            <span class="badge bg-light text-dark border">/@p.Slug</span>
                                        </td>
                                        <td style="font-size: 0.85rem;">
                                            @if (p.IsPublished)
                                            {
                                                <span class="badge bg-success-subtle text-success">Yayında</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning-subtle text-warning">Taslak</span>
                                            }
                                        </td>
                                        <td class="text-end pe-4">
                                            <a href="/preview/@SelectedTenantId/@p.Slug" target="_blank" class="btn btn-sm btn-outline-success me-2" style="font-size: 0.85rem;">
                                                <span class="oi oi-external-link"></span> Önizle
                                            </a>
                                            <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => EditPage(p.Id)" style="font-size: 0.85rem;">
                                                <span class="oi oi-pencil"></span> Düzenle
                                            </button>
                                            <button class="btn btn-sm btn-outline-danger" @onclick="() => DeletePage(p.Id)" style="font-size: 0.85rem;">
                                                <span class="oi oi-trash"></span> Sil
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-5 text-center text-muted">
                        <span class="oi oi-info mb-2" style="font-size: 2rem;"></span>
                        <p style="font-size: 0.95rem;">Bu siteye henüz bir sayfa eklenmemiş.</p>
                    </div>
                }
            </div>
        </div>
    }
</div>

@if (showAddModal)
{
    <div class="modal d-block shadow" style="background: rgba(0,0,0,0.5); z-index: 1050;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title fw-bold" style="font-size: 1.1rem;">Yeni Sayfa Oluştur</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CloseAddModal"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label fw-bold" style="font-size: 0.95rem;">Sayfa Başlığı</label>
                        <input class="form-control" @bind="pageTitle" placeholder="Örn: İletişim" style="font-size: 0.95rem;" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold" style="font-size: 0.95rem;">URL Slug</label>
                        <input class="form-control" @bind="pageSlug" placeholder="iletisim" style="font-size: 0.95rem;" />
                    </div>
                </div>
                <div class="modal-footer bg-light border-0">
                    <button class="btn btn-secondary" @onclick="CloseAddModal" style="font-size: 0.9rem;">Vazgeç</button>
                    <button class="btn btn-primary px-4" @onclick="SaveNewPage" style="font-size: 0.9rem;">Sayfayı Oluştur</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Tenant> Tenants = new();
    private List<Page> SitePages = new();
    private Guid selectedTenantId;
    private bool showAddModal = false;
    
    private string pageTitle = string.Empty;
    private string pageSlug = string.Empty;

    private Guid SelectedTenantId
    {
        get => selectedTenantId;
        set { selectedTenantId = value; LoadPages(); }
    }

    protected override void OnInitialized() => Tenants = Context.Tenants.ToList();

    private void LoadPages()
    {
        if (SelectedTenantId != Guid.Empty)
            SitePages = Context.Pages.Where(p => p.TenantId == SelectedTenantId).ToList();
    }

    private void EditPage(Guid id) => Navigation.NavigateTo($"/page/{id}");

    private async Task DeletePage(Guid id)
    {
        var page = await Context.Pages.FindAsync(id);
        if (page != null)
        {
            Context.Pages.Remove(page);
            await Context.SaveChangesAsync();
            LoadPages();
        }
    }

    private void OpenAddModal()
    {
        pageTitle = string.Empty;
        pageSlug = string.Empty;
        showAddModal = true;
    }

    private void CloseAddModal() => showAddModal = false;

    private async Task SaveNewPage()
    {
        if (string.IsNullOrWhiteSpace(pageTitle)) return;
        
        if (string.IsNullOrWhiteSpace(pageSlug))
            pageSlug = pageTitle.ToLower().Replace(" ", "-");

        var newPage = new Page 
        { 
            TenantId = SelectedTenantId, 
            Title = pageTitle,
            Slug = pageSlug,
            Content = "<h1>Yeni Sayfa</h1>",
            IsPublished = true 
        };

        Context.Pages.Add(newPage);
        await Context.SaveChangesAsync();
        
        showAddModal = false;
        LoadPages();
    }
}
